<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/drinkImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DrinkName"
        android:id="@+id/drinkNameTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/drinkImageView"
        android:layout_toEndOf="@+id/drinkImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:id="@+id/textView2"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/drinkImageView"
        android:layout_toEndOf="@+id/drinkImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35"
        android:id="@+id/mPirceTextView"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/textView3"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/mPirceTextView"
        android:layout_toEndOf="@+id/mPirceTextView"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:id="@+id/lPirceTextView"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="10dp" />
</RelativeLayout>